<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="?attr/actionBarSize"
    tools:context="altermarkive.guardian.core.About">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Logo de la app -->
            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_emergency"
                app:tint="@color/red_emergency" />

            <!-- Nombre de la app -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Guardian"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <!-- Versión -->
            <TextView
                android:id="@+id/app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:text="Versión 1.0.0"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="#666666" />

            <!-- Descripción principal -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="Tu protector personal\nDetección automática de caídas"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="#333333" />

            <!-- Card de cómo funciona -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Cómo funciona Guardian"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:text="1."
                            android:textColor="@color/red_emergency"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Configura tu contacto de emergencia"
                            android:textColor="#555555" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:text="2."
                            android:textColor="@color/red_emergency"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Lleva tu dispositivo cerca de la cintura"
                            android:textColor="#555555" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:text="3."
                            android:textColor="@color/red_emergency"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Guardian detecta caídas automáticamente"
                            android:textColor="#555555" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:text="4."
                            android:textColor="@color/red_emergency"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Envía alerta SMS con tu ubicación"
                            android:textColor="#555555" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card de características especiales -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Funciones especiales"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_check_circle"
                        android:drawablePadding="8dp"
                        android:text="Respuesta automática a llamadas de emergencia"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        app:drawableTint="#4CAF50" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@drawable/ic_check_circle"
                        android:drawablePadding="8dp"
                        android:text="SMS con 'POSICIÓN' recibe ubicación GPS"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        app:drawableTint="#4CAF50" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@drawable/ic_check_circle"
                        android:drawablePadding="8dp"
                        android:text="SMS con 'ALARMA' activa sonido de alerta"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        app:drawableTint="#4CAF50" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Estado actual -->
            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="Guardian está activo"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="#4CAF50"
                android:textStyle="bold" />

            <!-- Información técnica -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="Basado en algoritmos de detección de caídas\nde la Universidad de Oulu, Finlandia"
                android:textColor="#999999"
                android:textSize="12sp" />

        </LinearLayout>
    </ScrollView>

    <!-- Botón de emergencia -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp">

        <!-- Sombra del botón -->
        <View
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/emergency_button_shadow" />

        <!-- Botón de emergencia principal -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/emergency"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="16dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="@color/red_emergency"
            android:text="¡EMERGENCIA - NOTIFICAR CAÍDA!"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_emergency_fab"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            app:iconSize="32dp"
            app:iconPadding="12dp"
            app:strokeColor="#B71C1C"
            app:strokeWidth="2dp"
            app:elevation="8dp" />
    </FrameLayout>

</LinearLayout>