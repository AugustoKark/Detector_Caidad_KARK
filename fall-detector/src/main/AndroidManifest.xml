<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Using network location provider -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- Using GPS location provider -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Using the monitoring of the Internet connectivity -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Using calling a phone -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- Using WiFi state toggling -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- Using WebView and access to the internet-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Using speaker volume control -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <!-- Using address book -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- Using phone call monitoring -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- Using bootstrap notification -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- Using SMS sending -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <!-- Using foreground service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Using the body sensors -->
    <uses-permission android:name="android.permission.BODY_SENSORS" />
    <!-- Using the forced wake state -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- Using vibration -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- Using keyguard disable -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <!-- Using system alert window for emergency alerts -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- Using full screen intent for emergency notifications -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <!-- Using request ignore battery optimizations for background operation -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <!-- Using foreground service types -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <!-- Post notifications for API 33+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.FallDetector">

        <activity
            android:name="com.kark.falldetector.core.Main"
            android:label="@string/app"
            android:screenOrientation="portrait"
            android:exported="true"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ACTIVIDAD DE ALERTA DE CAÍDA - CONFIGURACIÓN CORREGIDA -->
        <activity
            android:name=".alerts.FallAlertActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:excludeFromRecents="true"
            android:taskAffinity=""
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:showWhenLocked="true"
            android:turnScreenOn="true" />

        <activity
            android:name="com.kark.falldetector.alerts.Contact"
            android:label="@string/contact"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="com.kark.falldetector.Contact" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name=".safezone.SafeZoneMonitoringService"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name="com.kark.falldetector.core.Boot"
            android:enabled="true"
            android:exported="true"
            android:label="Boot Receiver"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.kark.falldetector.alerts.Messenger"
            android:enabled="true"
            android:exported="true"
            android:label="SMS Responder"
            android:permission="android.permission.BROADCAST_SMS"
            tools:ignore="Instantiatable">
            <intent-filter android:priority="2147483647">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.kark.falldetector.alerts.Telephony"
            android:enabled="true"
            android:exported="true"
            android:label="Call Responder"
            android:permission="android.permission.MODIFY_PHONE_STATE">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.kark.falldetector.core.Connectivity"
            android:enabled="true"
            android:exported="true"
            android:label="Connectivity Receiver"
            android:permission="android.permission.ACCESS_NETWORK_STATE">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.kark.falldetector.core.Guardian"
            android:exported="false"
            android:label="Monitoring Service"
            android:foregroundServiceType="dataSync">
            <intent-filter>
                <action android:name="com.kark.falldetector.Guardian" />
            </intent-filter>
        </service>

        <service
            android:name="com.kark.falldetector.alerts.FallCountdownService"
            android:exported="false"
            android:label="Fall Countdown Service"
            android:foregroundServiceType="dataSync">
        </service>

    </application>

</manifest>